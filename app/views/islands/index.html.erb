<h1>List of islands</h1>

<div class="cards">
  <% @islands.each do |island| %>
    <div class="card-trip">
      <img src="https://images.unsplash.com/photo-1553603227-2358aabe821e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8aXNsYW5kfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60" />
      <div class="card-trip-infos">
        <div class="island-info">
          <h2><%= link_to island.name, island_path(island) %></h2>
          <p><%= island.territory %></p>
          <p><%= island.description %></p>
          <p>Size: <%= island.size %></p>
        </div>
          <div class="card-trip-pricing">
            <p>
              <%= island.price_per_day%>
            </p>
            <% if island.avilable %>
              <p>Available</p>
            <% end %>
          </div>
      </div>
    </div>
  <% end %>
</div>

<%= form_tag islands_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a island"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Description</th>
      <th>Price per day</th>
      <th>Avilable?</th>
      <th>Size</th>
    </tr>
  </thead>

  <tbody>
    <% @islands.each do |island| %>
      <tr>
        <td><%= link_to island.name, island_path(island) %></td>
        <td><%= island.territory %></td>
        <td><%= island.description %></td>
        <td><%= island.price_per_day %></td>
        <td><%= island.avilable %></td>
        <td><%= island.size %></td>
      </tr>
    <% end %>
  </tbody>

</table>
<% if params[:query].present? %>
  <%= link_to 'Back', islands_path %>
<% end %>
<%= link_to 'Create a new island', new_island_path %>
<%= link_to 'Dashboard', dashboard_path %>
